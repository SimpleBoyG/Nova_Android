<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txtModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="@font/pudding_p"
        />

    <ImageButton
        android:id="@+id/ib_DailyModifyGallary"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/daily_camera"
        android:scaleType="fitCenter"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edt_DailyModifySubject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="제목을 작성해주세요."
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/edt_DailyModifyContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_box"
        android:hint="내용을 작성해주세요."
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/btn_ModifyTextEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성완료"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_ModifyCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_weight="1"
            />

    </LinearLayout>



</LinearLayout>